$black = #2C2223;
$white = #fcfcfc;
$blueGreen = rgba(83,119,122,1);

*
  box-sizing: border-box;

.chromeframe
  position: absolute; top: 0;

body
  font: 13px Helmet, Freesans, sans-serif;

body
html
  background:#fcfcfc;

body, select, input, textarea
  color: $black;

a
  color: #03f;
a:hover
  color: #69f;

::-moz-selection
  background: #3584D8;
  color: #fff;
  text-shadow: none;

::selection
  background: #3584D8;
  color: #fff;
  text-shadow: none; 

a:link
  -webkit-tap-highlight-color: #fcd700; 

ins
  background-color: #fcd700;
  color: #000;
  text-decoration: none;
mark
  background-color: #fcd700;
  color: #000;
  font-style: italic;
  font-weight: bold;
  
input:-moz-placeholder
   color:#a9a9a9;

textarea:-moz-placeholder
   color:#a9a9a9;

section
  width:100%;
  padding:40px 0;
  float:left;
  clear:both;

.center
  margin:0 auto;
  width:96%;
  text-align:center;

  @media only screen and (min-width: 1000px)
    width: 960px;


.h1
  font-size:3.5em;

.h2
  font-size: 1.6em;
  margin-bottom: 10px;
  font-weight:bold;

.h3
  font-size:1.6em;
  font-weight:normal;

.sh1
  font-size:1.2em;
  font-weight:bold;
  padding-bottom:12px;
  border-bottom:1px dotted #e4e4e4;
  margin-bottom:12px;

.wrapper
  position: relative;
  width: 100%;
  z-index: 4;
  float: left;
  background: $white;

.header
  width:100%;
  float:left;
  height:80px;
  background:$white;
  border:1px solid #e4e4e4;

  @media only screen and (min-width:850px)
    position:fixed;

  .hamburger
    float:right;
    width:75px;
    padding:30px 0;

    @media only screen and (min-width:850px)
      display:none;

    .bun
      float:left;
      height:12px;
      width:12px;
      border-radius:6px;
      margin-left:2px;
      border:2px solid $blueGreen;

  .logo
    float:left;
    text-align:left;
    color:#333;
    // transform:rotate(1deg);

    @media only screen and (min-width:850px)
      width:40%;

    .nLogo
      border:2px solid #542437;;
      padding:13px 22px 14px
      border-radius:30px;
      margin: -20px 10px;
      float: left;
      font-size: 3em;

    .home
      margin-top: 20px;
      float: left;
      font-size: 1.6em;

  .nav 
    float:left;
    width:60%;
    display:none;

    @media only screen and (min-width:850px)
      display:block;


    .navItem
      float:left;
      padding:30px 0;
      color:#8d8d8d;
      width:33.33%;
      cursor:pointer;
      text-align:center;
      font-size:1.4em;
      font-weight:bold;

.modal
  position: fixed;
  z-index:-1;
  right: 0;
  top: -10px;
  height: 110%;
  width: 300px;
  background: #444;
  box-shadow: 1px 0px 4px #333 inset;
  // display:none;

.top
  width: 100%;
  padding:70px 0;
  clear:both;
  text-align:center;
  // margin-top:1%;
  // height:5px;
  background: $blueGreen;
  margin-top:80px;
  // transform:rotate(-.7deg);

  .h1
  .h3
    color:#fcfcfc;
    margin:20px auto 0;
    width:85%

  .gravatarWrapper
    border-radius:100px;
    overflow:hidden;
    margin:0 auto;
    height:150px;
    width:150px;

.skills
  .skillBox
    height:400px;
    border:1px solid #e4e4e4;
    width: 100%;
    margin:0 auto 15px;
    padding:12px;
    line-height:200%;
    border-radius:4px;
    background: linear-gradient(top,#fcfcfc,#f8f8f8)
    
    @media only screen and (min-width: 450px)
      width:75%;

    @media only screen and (min-width: 750px)
      float:left;
      width:30%;
      margin-left:2.5%;

    .skill1
    .skill2
    .skill3
      // text-shadow: 0px 1px 1px #ccc;

    .skill1
      font-size:1.4em;

    .skill2
      font-size:1.2em;

.work
  background:#f8f8f8;
  width:100%;

  &Section
    width:100%;
    clear:both;

    &Info a
      font-size: 1.4em;
      text-decoration: none;
      color: #777;

    &Header
      margin-top:110px;
      font-size:6em;


  
  #kickbit
    .workSection
      &Info
        float:left;

      &Example
        float:right;

        .macBookPro
          background:url(../images/kickbitMacBookPro.png);
          width:600px;
          height:386px;

          @media all and (-webkit-min-device-pixel-ratio: 1.5)
            background: url(../images/kickbitMacBookPro@2x.png);
            background-size:600px 386px;

  #aquto
    .workSection
      &Info
        float:right;
      
      &Example
        float:left;

        .macBookPro
          background:url(../images/aqutoMacBookPro.png);
          width:600px;
          height:386px;

          @media all and (-webkit-min-device-pixel-ratio: 1.5)
            background: url(../images/aqutoMacBookPro@2x.png);
            background-size:600px 386px;

  #kickbitApp
    .workSectionInfo
      float:left;
  




.contact
  background:#000;
  color:#fcfcfc;
  width:100%;

  form div
    margin: 10px auto;

.submit
.textarea
.input
  padding: 15px;
  width: 300px;
  border-radius: 2px;
  border: none;
  background: #e4e4e4;
  line-height: 150%;
  font-size: 1.4em;
  outline:none;

.textarea
  height:120px;



  
    
