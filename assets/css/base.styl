    .close
      opacity: 0;
      font-size: 3em;
      width: 50px;
      margin-top: -20px;
      position: absolute;
      color: $primaryColor;
      z-index: 4;
      cursor: pointer;

    .show-more
      position: absolute;
      top: 0;
      left: 0;
      bottom: -25px;
      right: 0;
      background: #ebf0f1;
      opacity: 0;
      border-bottom: 2px solid #e4e4e4;

      .detail-header
        font-size: 3em;
        margin-bottom: 20px;

      .detail-body
        color: #777;
        font-size: 1.2em;

        p
          max-width: 600px;
          margin: 0 auto 30px;

        .detail-body-inner
          position: relative;

          &:after
            content: ' ';
            display: block;
            height: 0;
            clear: both;

          .list
            float: left;
            width: 50%;
            border-right: 2px solid #e4e4e4;

          a
            color: $primaryColor;
            font-size: 1.2em;
            text-decoration: none;
            display: inline-block;
            position: absolute;
            top: 50%;
            transform: translate(-50%,-50%);

            @media only screen and (min-width: 640px)
              &:hover
                text-decoration: underline;

    @media only screen and (min-width: 640px)
      width:600px;

    @media only screen and (min-width: 920px)
      width:100%;
      float:left;

    &.showing-more
      .hamburger
        opacity: 0;

      .close
        opacity: 1;

      .show-more
        opacity: 1;
        z-index: 1;

    &:not(.showing-more):hover
      .hamburger
        opacity: 1;

    &Example
      clear:both;

      @media only screen and (min-width: 920px)
