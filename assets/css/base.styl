$black = #2C2223;

*
  box-sizing: border-box;

.chromeframe
  position: absolute; top: 0;

body
  font: 13px Helmet, Freesans, sans-serif;

body
html
  background:#fcfcfc;

body, select, input, textarea
  color: $black;

a
  color: #03f;
a:hover
  color: #69f;

::-moz-selection
  background: #fcd700;
  color: #fff;
  text-shadow: none;

::selection
  background: #fcd700;
  color: #fff;
  text-shadow: none; 

a:link
  -webkit-tap-highlight-color: #fcd700; 

ins
  background-color: #fcd700;
  color: #000;
  text-decoration: none;
mark
  background-color: #fcd700;
  color: #000;
  font-style: italic;
  font-weight: bold;
  
input:-moz-placeholder
   color:#a9a9a9;

textarea:-moz-placeholder
   color:#a9a9a9; 

.center
  margin:0 auto;
  width:96%;
  text-align:center;

  @media only screen and (min-width: 1000px)
    width: 960px;


.h1
  font-size:3.5em;

.h3
  font-size:1.6em;
  font-weight:normal;

.header
  width: 100%;
  padding:150px 0;
  clear:both;
  text-align:center;
  // margin-top:1%;
  // height:5px;
  background: rgba(83,119,122,1);
  // transform:rotate(-.7deg);

  .h1
  .h3
    color:#fcfcfc;
    margin:20px auto 0;
    width:85%

.nav
  // background: rgba(83,119,122,.9);  
  float:left;
  width:100%;

  .nLogo
    border:2px solid #542437;;
    padding:20px 25px;
    border-radius:30px;
    margin:0 10px;


  .navItem
    float:left;
    padding:30px 0;
    color:#8d8d8d;
    width:20%;
    cursor:pointer;
    text-align:center;
    font-size:1.4em;
    font-weight:bold;

    &.logo
      width:40%;
      text-align:left;
      color:#333;
      // background:#444443;

.skills
  .skillBox
    height:400px;
    border:1px solid #e4e4e4;
    width: 100%;
    margin:0 auto 15px;
    
    @media only screen and (min-width: 450px)
      width:75%;

    @media only screen and (min-width: 750px)
      float:left;
      width:30%;
      margin-left:2.5%;



  
    
