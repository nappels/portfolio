$black = #2C2223;
$white = #fff;
$primaryColor = #EA6D6D;

@keyframes gravatar
  from
    opacity: 0
  to
    opacity: 1

@keyframes logo
  0%
    margin-top:-80px
  100%
    margin-top:-20px

*
  box-sizing: border-box;

.chromeframe
  position: absolute; top: 0;

body
  font: 13px 'Roboto', Freesans, sans-serif;

body
html
  background:$white;

body, select, input, textarea
  color: $black;

a
  color: #03f;
a:hover
  color: #69f;

::-moz-selection
  background: #3584D8;
  color: $white;
  text-shadow: none;

::selection
  background: #3584D8;
  color: $white;
  text-shadow: none;

a:link
  -webkit-tap-highlight-color: #fcd700;

ins
  background-color: #fcd700;
  color: #000;
  text-decoration: none;
mark
  background-color: #fcd700;
  color: #000;
  font-style: italic;
  font-weight: bold;

::-webkit-input-placeholder
  color: #aaa;

::-moz-placeholder
  color: #aaa;

:-ms-input-placeholder
  color: #aaa;

:-moz-placeholder
  color: #aaa;


// Sprite
.social
  background-image: url(../images/social.png);

  @media all and (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 1.5dppx)
    background-image: url(../images/social@2x.png);
    background-size: 78px 72px;

.iconTwitter{background-position:0px 0px;width:42px;height:36px;}
.iconLinkedIn{background-position:-42px 0px;width:37px;height:36px;}
.iconGithub{background-position:0px -36px;width:23px;height:36px;}
.iconFacebook{background-position:-23px -36px;width:23px;height:36px;}

*
  transition:all .4s ease;

section
  width:100%;
  padding:40px 0;
  float:left;
  clear:both;

.center
  margin:0 auto;
  width:90%;
  text-align:center;

  @media only screen and (min-width: 1000px)
