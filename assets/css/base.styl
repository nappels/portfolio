.h2
  font-size: 2em;
  margin-bottom: 20px;
  font-weight:bold;
  color:#666;

.h3
  font-size:1.6em;
  font-weight:normal;

.sh1
  font-size:1.6em;
  font-weight:bold;
  // padding-bottom:12px;
  // border-bottom:3px solid #DC5E35;
  margin:10px auto 20px;

.hr
  width:50px;
  height:4px;
  border-radius:2px;
  margin:0 auto 60px;
  background:#e4e4e4;

  &.orange
    // background:rgba(220,94,53,0.6);
    // background:#999;
    height:2px;
