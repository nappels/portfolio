.wrapper
  position: relative;
  width: 100%;
  z-index: 4;
  float: left;
  background: $white;
  transition: left .4s ease;

  &.nav-open
    left: -235px;

  @media only screen and (min-width:850px)
    left:0 !important;

.header
  width:100%;
  float:left;
  height:80px;
  background:#f8f8f8;
  border:1px solid #e4e4e4;
  z-index:10;
  transition: left .4s ease;
  position:fixed;

  &.nav-open
    left: -235px;

  @media only screen and (min-width:850px)
    position:fixed;

  .inner
    @media only screen and (min-width:1450px)
      width:1400px;
      margin:0 auto;

  .hamburger
    float:right;
    width:75px;
    padding:30px 0;
    cursor:pointer;

    @media only screen and (min-width:850px)
      display:none;

    .bun
      float:left;
      height:12px;
      width:12px;
      border-radius:6px;
      margin-left:2px;
      border:2px solid $primaryColor;

  .logo
    float:left;
    text-align:left;
    color:#333;
    cursor:pointer;
    // transform:rotate(1deg);

    @media only screen and (min-width:850px)
      width:40%;

    .nLogoWrapper
      width:90px;
      height:80px;
      float:left;

    .nLogo
      border:2px solid #542437;;
      padding:13px 22px 14px
      border-radius:45px;
      float: left;
      font-size: 3em;
      cursor:pointer;
      margin: -20px 10px;
      // animation:logo .4s linear;

    .home
      margin-top: 20px;
      float: left;
      font-size: 1.6em;

  .nav
    float:left;
    width:60%;
    display:none;

    @media only screen and (min-width:850px)
      display:block;


    .navItem
      float:left;
      padding:30px 0;
      color:#8d8d8d;
      width:33.33%;
      cursor:pointer;
      text-align:center;
      font-size:1.4em;
      font-weight:bold;

      &:hover
        color:#333;

.modal
  position: fixed;
  z-index:-1;
  right: 0;
  top: -10px;
  height: 110%;
  width: 300px;
  background: #444;
  box-shadow: 1px 0px 4px #333 inset;
  // display:none;

  nav.mobile
    top: 70px;
    color: #fff;
    position: absolute;
    right: 0;
    width: 235px;

    .nav
      float: right;
      width: 100%;
      text-align:right;

      .navItem
        padding: 12px;
        font-size: 1.6em;
        border-bottom: 1px solid #999;
        cursor:pointer;

  .closeModal
    position: absolute;
    top: -8px;
    right: 155px;
    color: #f8f8f8;
    font-size: 3em;
    // font-weight: bold;
    border: 2px solid;
    padding: 13px 23px 14px;
    border-radius: 45px;
    cursor:pointer;

