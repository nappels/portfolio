$black = #2C2223;
$white = #fff;
$blueGreen = rgba(83,119,122,1);

@keyframes gravatar
  from
    transform:scale(0.1)
  to
    transform:scale(1)

@keyframes logo
  0%
    margin-top:-80px
  100%
    margin-top:-20px

*
  box-sizing: border-box;

.chromeframe
  position: absolute; top: 0;

body
  font: 13px 'Gudea', Freesans, sans-serif;

body
html
  background:$white;

body, select, input, textarea
  color: $black;

a
  color: #03f;
a:hover
  color: #69f;

::-moz-selection
  background: #3584D8;
  color: $white;
  text-shadow: none;

::selection
  background: #3584D8;
  color: $white;
  text-shadow: none; 

a:link
  -webkit-tap-highlight-color: #fcd700; 

ins
  background-color: #fcd700;
  color: #000;
  text-decoration: none;
mark
  background-color: #fcd700;
  color: #000;
  font-style: italic;
  font-weight: bold;
  
input:-moz-placeholder
   color:#a9a9a9;

textarea:-moz-placeholder
   color:#a9a9a9;

// Sprite
.social
  background-image: url(../images/social.png);

  @media all and (-webkit-min-device-pixel-ratio: 1.5), (min-resolution: 1.5dppx)
    background-image: url(../images/social@2x.png);
    background-size: 78px 72px;

.iconTwitter{background-position:0px 0px;width:42px;height:36px;}
.iconLinkedIn{background-position:-42px 0px;width:37px;height:36px;}
.iconGithub{background-position:0px -36px;width:23px;height:36px;}
.iconFacebook{background-position:-23px -36px;width:23px;height:36px;}

*
  transition:all .4s ease;

section
  width:100%;
  padding:40px 0;
  float:left;
  clear:both;

.center
  margin:0 auto;
  width:90%;
  text-align:center;

  @media only screen and (min-width: 1000px)
    width: 960px;


.h1
  font-size:3.5em;

.h2
  font-size: 2em;
  margin-bottom: 20px;
  font-weight:bold;
  color:#666;

.h3
  font-size:1.6em;
  font-weight:normal;

.sh1
  font-size:1.6em;
  font-weight:bold;
  // padding-bottom:12px;
  // border-bottom:3px solid #DC5E35;
  margin:10px auto 20px;

.hr
  width:50px;
  height:4px;
  border-radius:2px;
  margin:0 auto 60px;
  background:#e4e4e4;

  &.orange
    // background:rgba(220,94,53,0.6);
    // background:#999;
    height:2px;
    margin-bottom:20px;
    width:60%;

  &.dark
    background:#999;

.wrapper
  position: relative;
  width: 100%;
  z-index: 4;
  float: left;
  background: $white;
  transition:none;

  @media only screen and (min-width:850px)
    left:0 !important;

.header
  width:100%;
  float:left;
  height:80px;
  background:#f8f8f8;
  border:1px solid #e4e4e4;
  z-index:10;
  transition:none;
  position:fixed;

  @media only screen and (min-width:850px)
    position:fixed;
  
  .inner
    @media only screen and (min-width:1450px)
      width:1400px;
      margin:0 auto; 

  .hamburger
    float:right;
    width:75px;
    padding:30px 0;
    cursor:pointer;

    @media only screen and (min-width:850px)
      display:none;

    .bun
      float:left;
      height:12px;
      width:12px;
      border-radius:6px;
      margin-left:2px;
      border:2px solid $blueGreen;

  .logo
    float:left;
    text-align:left;
    color:#333;
    cursor:pointer;
    // transform:rotate(1deg);

    @media only screen and (min-width:850px)
      width:40%;

    .nLogoWrapper
      width:90px;
      height:80px;
      float:left;

    .nLogo
      border:2px solid #542437;;
      padding:13px 22px 14px
      border-radius:45px;
      float: left;
      font-size: 3em;
      cursor:pointer;
      margin: -20px 10px;
      // animation:logo .4s linear;

    .home
      margin-top: 20px;
      float: left;
      font-size: 1.6em;

  .nav 
    float:left;
    width:60%;
    display:none;

    @media only screen and (min-width:850px)
      display:block;


    .navItem
      float:left;
      padding:30px 0;
      color:#8d8d8d;
      width:33.33%;
      cursor:pointer;
      text-align:center;
      font-size:1.4em;
      font-weight:bold;

      &:hover
        color:#333;

.modal
  position: fixed;
  z-index:-1;
  right: 0;
  top: -10px;
  height: 110%;
  width: 300px;
  background: #444;
  box-shadow: 1px 0px 4px #333 inset;
  // display:none;
  
  nav.mobile
    top: 70px;
    color: #fff;
    position: absolute;
    right: 0;
    width: 235px;

    .nav
      float: right;
      width: 100%;
      text-align:right;

      .navItem
        padding: 12px;
        font-size: 1.6em;
        border-bottom: 1px solid #999;
        cursor:pointer;

  .closeModal
    position: absolute;
    top: -8px;
    right: 155px;
    color: #f8f8f8;
    font-size: 3em;
    // font-weight: bold;
    border: 2px solid;
    padding: 13px 23px 14px;
    border-radius: 45px;
    cursor:pointer;

